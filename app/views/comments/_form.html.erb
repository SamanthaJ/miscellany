<div class="form">
  <h1>Post a Comment</h1>
    <%= form_for [@post, @comment] do |f| %>  
      <%= f.label :user_name, "Your Name"%><br/>
      <%= f.text_field :user_name %><br/>
      
      <%= f.label :body %><br/>
      <%= f.text_area :body %><br/>

      <%= f.submit 'Submit' %>
    <% end %>
</div>