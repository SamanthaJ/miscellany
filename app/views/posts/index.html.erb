<div class="container" id="blog-posts">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1>Blog Entries</h1>
        <% @posts.each do |post| %>
          <p class="post-title">
          <%= link_to post.title, post_path(post) %>
          </p>
        <% end %>
        <br/>
        <div class="links">
          <%= link_to "Create a new post", new_post_path %>
        </div>
    </div>
  </div>
</div>
