<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="posts-index">
        <h1 class="title">Blogger</h1>  
        <h1>Blog Entries</h1>
        <% @posts.each do |post| %>
          <p id="post-links">
            <%= link_to post.title, post_path(post) %><br/>
            <small>Posted by: <%= post.user.email %></small>
          </p> 
        <% end %>
        <br/>  
         <%= link_to "Create a blog post", '#', class: "links create-link" %>
         <div class="hidden-form-container"><%= render partial: 'form' %></div>
      </div>
    </div>
  </div>
</div>
