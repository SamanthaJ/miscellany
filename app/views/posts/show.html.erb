<div class="container"> 
  <div class="show-post">
    <h1><%= @post.title %></h1>
    <br/>
    <p><%= @post.body %></p>
    <div class="posted-by">
      Posted: <%= time_ago_in_words(@post.created_at) %> ago</br>
      by: <%= @post.user.email %></br>
    </div>
    <div class="links">
      <%= link_to "Delete", @post, method: :delete, data: {confirm: "You sure you want to delete this post?"} %>
      <%= link_to "Edit", edit_post_path(@post) %><br/>
      <%= link_to "<<back", posts_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-4 col-md-4 comments">
      <h3><%= pluralize @post.comments.count, "Comment" %></h3>
      <% @comments.each do |comment| %>
      <h2><%= comment.user_name %></h2>
      <p><%= comment.body %></p>
      <h3>Posted <%= distance_of_time_in_words(comment.post.created_at, comment.created_at) %> later</h3>
      <% end %>
      <br/>
      <%= render partial: 'comments/form' %>
    </div>
    <br/>
    <br/>
  </div>
</div>

