<div class="container"> 
  <div class="show-post">
    <h1><%= @post.title %></h1>
    <br/>
    <p><%= @post.body %></p>
    <%= link_to "Delete", @post, method: :delete, data: {confirm: "You sure you want to delete this post?"}, class: "links" %>
    <%= link_to "Edit", edit_post_path(@post), class: "links" %><br/>
    <%= link_to "<<back", posts_path, class: "links" %>
</div>
<div class="row">
  <div class="col-md-offset-4 col-md-4 comments">
    <h3><%= pluralize @post.comments.count, "Comment" %></h3>
    <% @comments.each do |comment| %>
    <h2><%= comment.user_name %></h2>
    <p><%= comment.body %></p>
    <h3>Posted <%= distance_of_time_in_words(comment.post.created_at, comment.created_at) %> later</h3>
    <% end %>
    <br/>
    <%= render partial: 'comments/form' %>
  </div>
  <br/>
  <br/>
</div>

