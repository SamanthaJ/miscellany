<div class="container"> 
  <div class="show-post">
    <h1><%= @post.title %></h1>
    <br/>
    <p><%= @post.body %></p>
    <%= link_to "Delete", @post, method: :delete, data: {confirm: "You sure you want to delete this post?"}, class: "links" %>
    <%= link_to "Edit", edit_post_path(@post), class: "links" %><br/>
    <%= link_to "<<back", posts_path, class: "links" %>
</div>
<div class="row">
  <div class="col-md-offset-4 col-md-4 comments">
    <h3><%= pluralize @post.comments.count, "Comment" %></h3><br/>
    <% @comments.each do |comment| %>
    <p><%= comment.body %></p><br/>
    <div class="posted-by">
      Posted: <%= time_ago_in_words(comment.created_at) %> ago</br>
      by: <%= comment.user_name%></br>
    <% end %>
    <br/>
    <%= render partial: 'comments/form' %>
  </div>
  <br/>
  <br/>
</div>

