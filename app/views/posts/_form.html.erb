<div class="form"> 
  <%= form_for @post do |f| %>
    <%= f.label :author, "Posted by:" %><br/>
    <%= f.text_field :author %><br/>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br/>
   
    <%= f.label :body %><br>
    <%= f.text_area :body %><br/>
      
    <%= f.submit %>
 
  <% end %>
</div>