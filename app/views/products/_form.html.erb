<div class= "form">
  <%= form_for (Product.new) do |f| %>
    
    <%= f.label :title %><br/>
    <%= f.text_field :title %><br/>

    <%= f.label :description %><br/>
    <%= f.text_area :description %><br/>

    <%= f.label :price %><br/>
    <%= f.number_field :price %><br/>

    <%= f.label :stock %><br/>
    <%= f.number_field :stock %><br/>

    <%= f.label :image_url %><br/>
    <%= f.url_field :image_url %><br/>

    <%= f.submit %><br/>

  <% end %>
</div>

