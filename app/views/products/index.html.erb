<div class="container">
  <div class="products-index">
    <h1>InventoryTracker</h1>
    <%= link_to "Create a new product", '#', class: "links create-link" %>
    <div class="hidden-form-container"><%= render partial: 'form' %></div>
    <table id="product-table" class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <h2>All Products</h2>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tfoot>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
            </tr>
      </tfoot>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <span class="product-title"><%= product.title %></span>
            </td>
            <td>
              <span class="product-description"><%= product.description %></span>
            <td>
              <span class="product-price"><%= print_price(product.price) %></span>
            </td>
            <td>
              <%= print_stock(product.stock) %>
            </td>
            <td>
              <div class="links">
                <%= link_to "| Edit |", edit_product_path(product)  %>
                <%= link_to "| Delete |", product, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>