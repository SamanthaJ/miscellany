<div class="container">
  <div class="products-index">
    <div class="products-table">
    <h1>InventoryTracker</h1>
    <table>
      <thead>
        <tr>
          <h2>All Products</h2>
          <th>Image</th>
          <th>Description</th>
          <th>Price</th>
          <th>Stock</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <span class="product-image"><%= image_tag "products/#{product.image_url}" %></span>
            </td> 
            <td>
              <span class="product-title"><%= product.title %></span><% product.description %>
            </td>
            <td>
              <span class="product-price"><%= print_price(product.price) %></span><br/><%= link_to "View Product", product_path(product), class: "links" %>
            </td>
            <td>
              <%= print_stock(product.stock) %>
            </td>
            <td>
              <%= link_to "Delete Product", method: :destroy, class: "links" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <%= link_to "Create a new product", '#', class: "links create-link" %>
    <div class="hidden-form-container"><%= render partial: 'form' %></div>
  </div>
</div>