<!DOCTYPE html>
<html>
<head>
  <title>Miscellany</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="navbar-header">
      <%= link_to "MISCELLANY", root_path, class: "navbar-brand" %>
    </div>
    <div class="container">
      <ul class="nav navbar-nav">
        <li><%= link_to "Blogger", posts_path %></li>
        <li><%= link_to "TaskManager", tasks_path %></li>
        <li><%= link_to "InventoryTracker", products_path %></li>
        <li><%= link_to "FactFlipper", facts_path %></li>
      </ul>
    <form class="navbar-form navbar-right" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
      <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-text navbar-right" %>
      <% else %>
      <%= link_to "Sign in", new_user_session_path, class: "navbar-text navbar-right" %>
      <% end %>
    </div>
</nav>
<div class="container">
  <%= flash_messages %>
  <%= yield %>
</div>

</body>
</html>
